{% block navbar %}
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="{{ path('homepage') }}">
        <i class="bi bi-house pe-2"></i>Accueil
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          {% if app.user and (is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN')) %}
            <li class="nav-item">
              <a class="nav-link" href="{{ path('user_create') }}">
                <i class="bi bi-vector-pen pe-2"></i>Créer un utilisateur
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('user_list') }}">
                <i class="bi bi-file-earmark-person pe-2"></i>Liste des utilisateurs
              </a>
            </li>
          {% endif %}
        </ul>
        <ul class="navbar-nav">
          {% if app.user %}
            <li class="nav-item">
              <a class="nav-link" href="{{ path('app_logout') }}">
                <i class="bi bi-box-arrow-left pe-2"></i>Déconnexion
              </a>
            </li>
          {% else %}
            <li class="nav-item">
              <a class="nav-link" href="{{ path('app_login') }}">
                <i class="bi bi-box-arrow-in-right pe-2"></i>Connexion
              </a>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
{% endblock %}
